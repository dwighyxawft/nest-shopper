                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/location" class="sidebar w-100 btn text-start">Locations</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/logout" class="sidebar w-100 btn text-start">Logout</a></li>
                    </ul>
                </nav>
            </div>
            
            <!-- Main Content Column -->
            <div class="col-md-9" style="height: 80vh; overflow-y: scroll; scrollbar-width: none; -ms-overflow-style: none;">
                <div class="row">
                    <% if(access == null){ %>
                        <form id="create" class="needs-validation mt-4" method="post">
                            <div class="col-md-6">
                                <h3 class="py-2">Create a new access</h3>
                                <div class="form-group mb-3">
                                    <label><strong>Name</strong></label>
                                    <input type="text" class="form-control form-control-lg" name="name" placeholder="Access name">
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group mb-3">
                                            <label><strong>State</strong></label>
                                            <select name="state" id="state" class="form-control form-control-lg">
                                
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group mb-3">
                                            <label for="city"><strong>City</strong></label>
                                            <select name="city" id="city" class="form-control form-control-lg">
                                        
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Email</strong></label>
                                    <input type="email" class="form-control form-control-lg" name="email" placeholder="Access email">
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Phone</strong></label>
                                    <input type="tel" class="form-control form-control-lg" name="phone" placeholder="Access phone number">
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Address</strong></label>
                                    <input type="text" class="form-control form-control-lg" name="address" placeholder="Access residential address">
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Gender</strong></label>                        
                                    <select name="gender" id="gender" class="form-control form-control-lg">
                                        <option value="male">Male</option>
                                        <option value="female">Female</option>
                                    </select>
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Password</strong></label>
                                    <input type="password" class="form-control form-control-lg" name="password">
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Confirm Password</strong></label>
                                    <input type="password" class="form-control form-control-lg" name="confirm">
                                </div>
                                    
                                
                            </div>
                            <div class="col-md-6"></div>
                            <div class="d-flex justify-content-end"><button type="submit" class="btn btn-success me-3">Edit Access</button></div>
                        </form>
                    <% }else{ %>
                        <input type="hidden" id="access_id" name="access_id" value="<%= access._id %>">
                        <form id="edit" class="needs-validation mt-4" method="post">
                            <div class="col-md-6">
                                <h3 class="py-2">Edit access</h3>
                                <div class="form-group mb-3">
                                    <label><strong>Name</strong></label>
                                    <input type="text" class="form-control form-control-lg" name="name" value="<%= access.name %>" placeholder="Access name">
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group mb-3">
                                            <label><strong>State</strong></label>
                                            <select name="state" id="state" class="form-control form-control-lg">
                                
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group mb-3">
                                            <label for="city"><strong>City</strong></label>
                                            <select name="city" id="city" class="form-control form-control-lg">
                                        
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Email</strong></label>
                                    <input type="email" class="form-control form-control-lg" value="<%= access.email %>" disabled name="email" placeholder="Access email">
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Phone</strong></label>
                                    <input type="tel" class="form-control form-control-lg" name="phone" value="<%= access.phone %>" placeholder="Access phone number">
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Address</strong></label>
                                    <input type="text" class="form-control form-control-lg" name="address" value="<%= access.address %>" placeholder="Access residential address">
                                </div>
                                    
                            </div>
                            <div class="col-md-6"></div>
                            <div class="d-flex justify-content-end"><button type="submit" class="btn btn-success me-3">Create Access</button></div>
                        </form>
                    <% } %>

                    
                    <% if(access != null){ %>
                        <form id="password" class="needs-validation mt-4" method="post"></form>
                            <div class="col-md-6">
                                <h3 class="py-2">Edit Access Password</h3>
                                    <div class="form-group mb-3">
                                        <label><strong>New Password</strong></label>
                                        <input type="password" class="form-control form-control-lg" name="new_pass">
                                    </div>

                                    <div class="form-group mb-3">
                                        <label><strong>Confirm Password</strong></label>
                                        <input type="password" class="form-control form-control-lg" name="confirm">
                                    </div>
                            
                                    
                                
                            </div>
                            <div class="col-md-6"></div>
                            <div class="d-flex justify-content-end"><button type="submit" class="btn btn-success me-3"><% if(access != null){ %> Edit <% }else{ %> Create <% } %> Access</button></div>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </main>
    
    <footer class="mt-5 container">
        <center>
          <p class="pb-1"><a href="">Contact Us</a></p>
