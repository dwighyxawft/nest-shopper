            </div>
            
            <!-- Main Content Column -->
            <div class="col-md-9" style="height: 80vh; overflow-y: scroll; scrollbar-width: none; -ms-overflow-style: none;">
                <div class="row">
                    <% if(location == null){ %>
                        <form id="create" class="needs-validation mt-4" method="post">
                            <div class="col-md-6">
                                <h3 class="py-2">Create a new location for couriers</h3>
                                <div class="form-group mb-3">
                                    <label><strong>State</strong></label>
                                    <select name="state" id="state" class="form-control form-control-lg">
                        
                                    </select>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="city"><strong>City</strong></label>
                                    <select name="city" id="city" class="form-control form-control-lg">
                                        <option value="all">All</option>
                                        <option value="some">Some</option>
                                    </select>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="cities"><strong>Cities</strong></label>
                                    <textarea name="cities" id="cities" cols="30" rows="8" class="form-control"></textarea>
                                </div>

                                <input type="hidden" name="admin_id" value="<%= admin._id %>">
                                    
                                
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-end"><button type="submit" class="btn btn-success me-3">Create Location</button></div>
                            </div>
                        </form>
                    <% }else{ %>
                        <input type="hidden" id="location_id" value="<%= location._id %>">
                        <form id="edit" class="needs-validation mt-4" method="post">
                            <div class="col-md-6">
                                <h3 class="py-2">Edit location for couriers</h3>
                                <div class="form-group mb-3">
                                    <label><strong>State</strong></label>
                                    <select name="state" id="state" class="form-control form-control-lg">
                        
                                    </select>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="city"><strong>City</strong></label>
                                    <select name="city" id="city" class="form-control form-control-lg">
                                        <option value="all">All</option>
                                        <option value="some">Some</option>
                                    </select>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="cities"><strong>Cities</strong></label>
                                    <textarea name="cities" id="cities" cols="30" rows="8" class="form-control"><%= location.cities %></textarea>
                                </div>
                                    
                                <input type="hidden" name="admin_id" value="<%= admin._id %>">
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-end"><button type="submit" class="btn btn-success me-3">Edit Location</button></div>
                            </div>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </main>
    
    <footer class="mt-5 container">
        <center>
          <a href="" class="footer-links"><i class="fa fa-instagram"></i></a> &nbsp; &nbsp; <a href="" class="footer-links"><i class="fa fa-facebook"></i></a> &nbsp; &nbsp; <a href="" class="footer-links"><i class="fa fa-twitter"></i></a> &nbsp; &nbsp; <a href="" class="footer-links"><i class="fa fa-linkedin"></i></a>
          <p class="py-2 footer-text">Â© 2023 Xawft, Inc. All rights reserved.</p>
        </center>
    </footer>
    <script>
        const stateSelect = document.querySelector("#state");
        const cities = document.querySelector("#cities");
        const city = document.querySelector("#city");
        city.addEventListener("change", function(){
            if(city.value == "all"){
                cities.disabled = true;
            }else if(city.value == "some"){
                cities.disabled = false;
            }
        })

        cities.setAttribute("disabled", true)
        function ajaxGet(url, resolve, reject){
            $.ajax({
                url: url,
                type: "GET",
                dataType: "json",
                success: function(data){
                    resolve(data);
                },
                error: function(err){
                    reject(err);
                }
            })
        }
        const getStates = new Promise((resolve, reject) => {
            ajaxGet("https://nigeria-states-towns-lga.onrender.com/api/states", resolve, reject);
        })
        getStates.then(function(states){
            let template = "<option>Select a state</option>";
            states.forEach(state => {
                template += `<option value="${state.state_code}">${state.name}</option>`;
            });
            stateSelect.insertAdjacentHTML("afterbegin", template);
        }).catch(function(error){
            console.log(error);
        })
        stateSelect.addEventListener("change", function(){
            const state = stateSelect.value;
            const getCities = new Promise((resolve, reject) => {
                ajaxGet("https://nigeria-states-towns-lga.onrender.com/api/"+ state +"/lgas", resolve, reject);
            })
            getCities.then(function(entries){
                let arr = [];
                entries.forEach(city => {
                    arr.push(city.name);
                });
                const text = arr.join(", ");
                cities.textContent = text;
            }).catch(function(error){
                console.log(error);
            })
        })

        $("#create").on("submit", function(e){
                e.preventDefault();
                $.ajax({
                    url: "/location",
                    type: "post",
                    data: $(this).serialize(),
                    dataType: "json",
                    success: function(data){
                        alert(data.message);
                    },
                    error: function(err){
                        console.log(err);
                    }
                })
            }) 
           
            $("#edit").on("submit", function(e){
                e.preventDefault();
                const location_id = $("#location_id").val();
                $.ajax({
                    url: "/location/"+location_id,
                    type: "patch",
                    data: $(this).serialize(),
                    dataType: "json",
                    success: function(data){
                        alert(data.message);
                    },
                    error: function(err){
                        console.log(err);
                    }
                })
            })

            
        

    </script>
</body>
</html>