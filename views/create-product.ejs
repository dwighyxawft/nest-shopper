<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../../css/index.css">
    <link rel="stylesheet" href="../../../css/home.css">
    <link rel="stylesheet" href="../../../bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="../../../font-awesome-4.7.0/css/font-awesome.min.css">
    <script src="../../../js/jquery-3.5.1.min.js"></script>
    <script src="../../../js/popper2.js"></script>
    <script src="../../../bootstrap/js/bootstrap.min.js"></script>
    <title>xawft shop</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm bg-light navbar-light">
            <a href="/" class="navbar-brand ms-sm-3 ms-1"><img src="../../../../images/general/logo.png" alt=""> Xawft Shop Admin</a>
            <a href="" class="text-decoration-none d-sm-none d-inline"><img src="../../../../images/admin/<%= admin.image %>" class="rounded-circle border-success border" width="60" alt="user-image"></a>
            <div class="collapse navbar-collapse justify-content-end">
                <a href="" class="text-decoration-none justify-self-end me-3"><img src="../../../../images/admin/<%= admin.image %>" class="rounded-circle border-success border" width="60" alt="user-image"></a>
            </div>
            <button class="navbar-toggler border-0" data-bs-toggle="offcanvas" data-bs-target="#navCanvas"><span class="navbar-toggler-icon"></span></button>
            <div class="offcanvas offcanvas-end w-50 bg-light" id="navCanvas">
                <div class="offcanvas-body bg-light">
                    <ul class="list-group border-0">
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/home" class="sidebar w-100 btn text-start text-dark">Home</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/order" class="sidebar w-100 btn text-start text-dark">Orders</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/complaint" class="sidebar w-100 btn text-start text-dark">Complaints</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/courier" class="sidebar w-100 btn text-start text-dark">Courier</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/category" class="sidebar w-100 btn text-start text-dark">Categories</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/group" class="sidebar w-100 btn text-start text-dark">Groups</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/product" class="sidebar active w-100 btn text-start text-dark">Products</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/access" class="sidebar w-100 btn text-start text-dark">Access</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/location" class="sidebar w-100 btn text-start text-dark">Locations</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/logout" class="sidebar w-100 btn text-start text-dark">Logout</a></li>
                    </ul>
                </div>
              </div>
        </nav>
    </header> 
    <main class="container-fluid">
        <div class="row" id="row">
            <!-- Sidebar Column -->
            <div class="col-md-3 d-sm-flex d-none" style="height: 80vh; overflow-y: scroll; scrollbar-width: none; -ms-overflow-style: none;">
                <!-- Sidebar Navigation -->
                <nav class="mt-3 w-100">
                    <ul class="list-group border-0">
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/home" class="sidebar w-100 btn text-start">Home</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/order" class="sidebar w-100 btn text-start">Orders</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/complaint" class="sidebar w-100 btn text-start">Complaints</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/courier" class="sidebar w-100 btn text-start">Courier</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/category" class="sidebar w-100 btn text-start">Categories</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/group" class="sidebar w-100 btn text-start">Groups</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/product" class="sidebar active w-100 btn text-start">Products</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/access" class="sidebar w-100 btn text-start">Access</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/admin/location" class="sidebar w-100 btn text-start">Locations</a></li>
                        <li class="list-group-item pt-1 w-100 border-0"><a href="/logout" class="sidebar w-100 btn text-start">Logout</a></li>
                    </ul>
                </nav>
            </div>
            
            <!-- Main Content Column -->
            <div class="col-md-9" style="height: 80vh; overflow-y: scroll; scrollbar-width: none; -ms-overflow-style: none;">
                <div class="row">
                    <% if(product == null){ %>
                        <form id="create" class="needs-validation mt-4" method="post" enctype="multipart/form-data">
                            <div class="col-md-6">
                                <h3 class="py-2">Create a new product</h3>
                                <div class="form-group mb-3">
                                    <label><strong>Name</strong></label>
                                    <input type="text" class="form-control form-control-lg" name="name" placeholder="Product name">
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group mb-3">
                                            <label><strong>Category</strong></label>
                                            <select name="category" id="category" class="form-control form-control-lg">
                                                <option>Select a category</option>
                                                <% categories.forEach(function(category){ %>
                                                    <option value="<%= category._id %>"><%= category.name %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group mb-3">
                                            <label for="group"><strong>Group</strong></label>
                                            <select name="group" id="group" class="form-control form-control-lg">
                                                <option>Select a group</option>
                                                <% groups.forEach(function(group){ %>
                                                    <option value="<%= group._id %>"><%= group.name %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Quantity</strong></label>
                                    <input type="number" class="form-control form-control-lg" name="quantity" placeholder="Product quantity">
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Price</strong></label>
                                    <input type="number" class="form-control form-control-lg" name="price" placeholder="Product price">
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Country of Origin</strong></label>
                                    <input type="text" class="form-control form-control-lg" name="origin" placeholder="Product Country of manufacture">
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group mb-3">
                                            <label><strong>Product Image 1</strong></label>
                                            <input type="file" name="image1" id="" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group mb-3">
                                            <label><strong>Product Image 2</strong></label>
                                            <input type="file" name="image2" id="" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Material</strong></label>
                                    <input type="text" class="form-control form-control-lg" name="material" placeholder="Material for product manufacture">
                                </div>
                                
                                    
                                
                            </div>
                            <div class="col-md-6 pt-5">
                                <div class="form-group mb-3">
                                    <label><strong>Product Image 3</strong></label>
                                    <input type="file" name="image3" id="" class="form-control form-control-lg">
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Care Instruction</strong></label>
                                    <input type="text" class="form-control form-control-lg" name="care">
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Size</strong></label>
                                    <select name="size" class="form-control form-control-lg" id="">
                                        <option value="D">Default</option>
                                        <option value="XS - SM">Extra small</option>
                                        <option value="SM - MD">Small</option>
                                        <option value="MD - LG">Medium</option>
                                        <option value="LG - XL">Large</option>
                                        <option value="XL - XXL">Extra Large</option>
                                        <option value="XXL">Extra Extra Large</option>
                                    </select>
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Keywords for search</strong></label>
                                    <input type="text" class="form-control form-control-lg" name="keyword">
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Description</strong></label>
                                    <textarea name="description" class="form-control" id="" cols="30" rows="5"></textarea>
                                </div>
                            </div>
                            <div class="d-flex justify-content-end"><button type="submit" class="btn btn-success me-3">Create Product</button></div>
                        </form>
                    <% }else{ %>
                        <input type="hidden" id="product_id" value="<%= product._id %>">
                        <form id="edit" class="needs-validation mt-4" method="post" enctype="multipart/form-data">
                            <div class="col-md-6">
                                <h3 class="py-2">Edit a product</h3>
                                <div class="form-group mb-3">
                                    <label><strong>Name</strong></label>
                                    <input type="text" class="form-control form-control-lg" name="name" placeholder="Product name" value="<%= product.name %>">
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group mb-3">
                                            <label><strong>Category</strong></label>
                                            <select name="category" id="category" class="form-control form-control-lg">
                                                <option>Select a category</option>
                                                <% categories.forEach(function(category){ %>
                                                    <option value="<%= category._id %>"><%= category.name %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group mb-3">
                                            <label for="group"><strong>Group</strong></label>
                                            <select name="group" id="group" class="form-control form-control-lg">
                                                <option>Select a group</option>
                                                <% groups.forEach(function(group){ %>
                                                    <option value="<%= group._id %>"><%= group.name %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Quantity</strong></label>
                                    <input type="number" class="form-control form-control-lg" name="quantity" placeholder="Product quantity" value="<%= product.quantity %>">
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Price</strong></label>
                                    <input type="number" class="form-control form-control-lg" name="price" placeholder="Product price" value="<%= product.price %>">
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Country of Origin</strong></label>
                                    <input type="text" class="form-control form-control-lg" name="origin" placeholder="Product Country of manufacture" value="<%= product.origin %>">
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group mb-3">
                                            <label><strong>Product Image 1</strong></label>
                                            <input type="file" name="image1" id="" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group mb-3">
                                            <label><strong>Product Image 2</strong></label>
                                            <input type="file" name="image2" id="" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Material</strong></label>
                                    <input type="text" class="form-control form-control-lg" name="material" placeholder="Material for product manufacture" value="<%= product.material %>">
                                </div>
                                
                                    
                                
                            </div>
                            <div class="col-md-6 pt-5">
                                <div class="form-group mb-3">
                                    <label><strong>Product Image 3</strong></label>
                                    <input type="file" name="image3" id="" class="form-control form-control-lg">
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Care Instruction</strong></label>
                                    <input type="text" class="form-control form-control-lg" name="care" value="<%= product.care %>">
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Size</strong></label>
                                    <select name="size" class="form-control form-control-lg" id="">
                                        <option value="D">Default</option>
                                        <option value="XS">Extra small</option>
                                        <option value="SM">Small</option>
                                        <option value="MD">Medium</option>
                                        <option value="LG">Large</option>
                                        <option value="XL">Extra Large</option>
                                        <option value="XXL">Extra Extra Large</option>
                                    </select>
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Keywords for search</strong></label>
                                    <input type="text" class="form-control form-control-lg" name="keyword" value="<%= product.keywords %>">
                                </div>
                                <div class="form-group mb-3">
                                    <label><strong>Description</strong></label>
                                    <textarea name="description" class="form-control" id="" cols="30" rows="5"><%= product.description %></textarea>
                                </div>
                            </div>
                            <div class="d-flex justify-content-end"><button type="submit" class="btn btn-success me-3">Edit Product</button></div>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </main>
    
    <footer class="mt-5 container">
        <center>
          <a href="" class="footer-links"><i class="fa fa-instagram"></i></a> &nbsp; &nbsp; <a href="" class="footer-links"><i class="fa fa-facebook"></i></a> &nbsp; &nbsp; <a href="" class="footer-links"><i class="fa fa-twitter"></i></a> &nbsp; &nbsp; <a href="" class="footer-links"><i class="fa fa-linkedin"></i></a>
          <p class="py-2 footer-text">Â© 2023 Xawft, Inc. All rights reserved.</p>
        </center>
    </footer>
    <script>
        $("#create").on("submit", function(e){
            e.preventDefault();
            var formData = new FormData($(this)[0]);
            $.ajax({
                url: "/product/create",
                type: "post",
                data: formData,
                processData: false,
                contentType: false,
                success: function(data){
                    console.log(data);
                    alert(data.message)
                },
                error: function(err){
                    console.error(err);
                }
            })
        })

        $("#edit").on("submit", function(e){
            e.preventDefault();
            const product_id = $("#product_id").val()
            var formData = new FormData($(this)[0]);
            $.ajax({
                url: "/product/update/"+product_id,
                type: "patch",
                data: formData,
                processData: false,
                contentType: false,
                success: function(data){
                    alert(data.message)
                },
                error: function(err){
                    console.error(err);
                }
            })
        })
    </script>
</body>
</html>