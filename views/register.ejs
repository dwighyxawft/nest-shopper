        </center>
    </footer>
    <script>
        $(".alert").hide();
        const stateSelect = document.querySelector("#state");
        const citySelect = document.querySelector("#city");
        function ajaxGet(url, resolve, reject){
            $.ajax({
                url: url,
                type: "GET",
                dataType: "json",
                success: function(data){
                    resolve(data);
                },
                error: function(err){
                    reject(err);
                }
            })
        }
        const getStates = new Promise((resolve, reject) => {
            ajaxGet("https://nigeria-states-towns-lga.onrender.com/api/states", resolve, reject);
        })
        getStates.then(function(states){
            let template = "<option>Select a state</option>";
            states.forEach(state => {
                template += `<option value="${state.state_code}">${state.name}</option>`;
            });
            stateSelect.insertAdjacentHTML("afterbegin", template);
        }).catch(function(error){
            console.log(error);
        })

        stateSelect.addEventListener("change", function(){
            const state = stateSelect.value;
            const getCities = new Promise((resolve, reject) => {
                ajaxGet("https://nigeria-states-towns-lga.onrender.com/api/"+ state +"/lgas", resolve, reject);
            })
            getCities.then(function(cities){
                let template = "<option>Select a city</option>";
                cities.forEach(city => {
                    template += `<option value="${city.name}">${city.name}</option>`;
                });
                citySelect.innerHTML = template;
            }).catch(function(error){
                console.log(error);
            })
        })

        $("#register").on('submit', function(e){
            e.preventDefault();
            $.ajax({
                url: "/user/register",
                type: "post",
                data: $(this).serialize(),
                dataType: "json",
                success: function(data){
                    if(data.status){
                        alert(data.message)
                        location.href = "/login";
                    }else{
                        $(".alert").show();
                        $("p.alertText").text(data.message);
                        setTimeout(function(){
                            $(".alert").hide();
                        }, 10000);
                    }
                },
                error: function(err){
                    console.log(err);
                }
            })
        })

    </script>
</body>
</html>