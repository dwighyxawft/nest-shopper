    <main class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="login">
                    <h4 class="title text-center fw-bold pt-5">Personal Information Settings</h4>
                </div>
                <form class="mt-3" id="personal">
                    <div class="form-group mb-3">
                        <label for="name" class="pb-1"><strong>Name</strong></label>
                        <input type="text" name="name" id="name" placeholder="Name" value="<%= user.name %>" class="form-control form-control-lg">
                    </div>
                    <div class="form-group mb-3">
                        <label for="email" class="pb-1"><strong>Email</strong></label>
                        <input type="email" name="email" id="email" placeholder="Email" value="<%= user.email %>" class="form-control form-control-lg" disabled>
                    </div>
                    <div class="form-group mb-3">
                        <label for="phone" class="pb-1"><strong>Phone</strong></label>
                        <input type="tel" name="phone" id="phone" placeholder="Phone" value="<%= user.phone %>" class="form-control form-control-lg">
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group mb-3">
                                <label for="city" class="pb-1"><strong>City</strong></label>
                                <select name="city" id="city" class="form-control form-control-lg">
                            
                                </select>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group mb-3">
                                <label for="state" class="pb-1"><strong>State</strong></label>
                                <select name="state" id="state" class="form-control form-control-lg">
                            
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="address" class="pb-1"><strong>Street Address</strong></label>
                        <input type="text" name="address" id="address" value="<%= user.address %>" placeholder="Address" class="form-control form-control-lg">
                    </div>
                    <center><button type="submit" class="btn w-100 btn mt-3">Update</button></center>
                </form>
                <div class="login">
                    <h4 class="title text-center fw-bold pt-5">Password Settings</h4>
                </div>
                <form class="mt-3" id="password">
                    <div class="form-group mb-3">
                        <label for="current" class="pb-1"><strong>Current Password</strong></label>
                        <input type="password" name="old_pass" id="current" class="form-control form-control-lg">
                    </div>
                    <div class="form-group mb-3">
                        <label for="new_pas" class="pb-1"><strong>New Password</strong></label>
                        <input type="password" name="new_pass" id="new_pas" class="form-control form-control-lg">
                    </div>
                    <div class="form-group mb-3">
                        <label for="con_pas" class="pb-1"><strong>Confirm Password</strong></label>
                        <input type="password" name="confirm" id="con_pas" class="form-control form-control-lg">
                    </div>
                    <center><button type="submit" class="btn w-100 btn mt-3">Update</button></center>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </main>
    <footer class="mt-5 container">
        <center>
          <p class="pb-1"><a href="">Contact Us</a></p>
